{
  "name": "ganesh-portal",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "add-container": "scripts/add_container --prompt --force",
    "add-ganesh": "[[ -d shell ]] || git clone https://github.com/smithapitla/ganesh.git",
    "add-entitlements-config": "[[ -d entitlements-config ]] || git clone https://github.com/smithapitla/entitlements.git",
    "add-common-core": "[[ -d domains/common/core ]] || scripts/add_container --org smithapitla --repo common_core",
    "add-tools": "[[ -d domains/tools/store ]] || scripts/add_container --org smithapitla --repo tools_store",
    "bootstrap": "yarn install && yarn add-ganesh && yarn add-common-core && yarn add-entitlements && lerna bootstrap",
    "build": "lerna run build",
    "build:prod": "NODE_ENV=production lerna run build",
    "kill": "pkill -9 -f '/node '",
    "serve": "ENTITLEMENTS_FILE=$PWD/entitlements-config/src/config/non-prod/entitlements.json yarn run concurrent",
    "serve:prod": "ENTITLEMENTS_FILE=$PWD/entitlements-config/src/config/non-prod/entitlements.json DEV_SERVE_ENV=production yarn run concurrent:prod",
    "serve:no-sso": "SSO_ENABLED=false yarn serve",
    "serve:ssl": "NODE_TLS_REJECT_UNAUTHORIZED=0 yarn serve:prod",
    "serve:mock": "SSO_ENABLED=false NODE_ENV=mock yarn serve",
    "lint": "lerna run lint",
    "lint-changed": "lerna run lint --parallel --since master",
    "pull-all": "./scripts/pull_all",
    "test": "lerna run test",
    "test-changed": "lerna run test --parallel --since master",
    "concurrent": "concurrently --raw \"lerna run serve --parallel\" \"yarn proxy\"",
    "concurrent:prod": "concurrently --raw \"lerna run serve --parallel --ignore '@harshey-ui/*'\" \"yarn proxy:prod\"",
    "proxy": "ro-server proxy",
    "proxy:prod": "ro-server proxy --no-apps",
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "husky": "^1.3.1",
    "lerna": "^3.13.3",
    "lodash.get": "^4.4.2",
    "prettier": "^1.17.0"
  },
}
